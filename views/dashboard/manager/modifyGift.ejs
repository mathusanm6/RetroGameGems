<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Bootstrap 4 Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Modify Gift</title>
    <style>
        .img-preview {
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            width: 100%;
            height: auto;
        }

        .img-preview img {
            max-width: 100%;
            transition: transform 0.5s ease-in-out;
            transform: scale(0);
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <a href="/manager-dashboard" class="btn btn-outline-primary mt-3">Back to Manager Dashboard</a>
    </div>
    <div class="container mt-5">

        <%- include('partials/alerts'); %>

            <h1>Modify Gift</h1>
            <form action="/modify-gift" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="giftId">Select a Gift:</label>
                    <select name="giftId" id="giftId" class="form-control" onchange="loadGiftData(this.value)">
                        <option value="">Select a Gift</option>
                        <% gifts.forEach(function(gift) { %>
                            <option value="<%= gift.id %>">
                                <%= gift.name %> - <%= gift.needed_points %> points - <%= gift.quantity %> available
                            </option>
                            <% }); %>
                    </select>
                </div>

                <!-- Div to hold dynamically loaded form fields -->
                <div id="giftDataForm"></div>

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <button type="submit" class="btn btn-primary btn-block" style="padding-bottom: 50px;">Update Gift</button>
                        </div>
                    </div>
                </div>
            </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.6/dist/umd/popper.min.js"
        integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
        crossorigin="anonymous"></script>

    <script src="/alertHandler.js"></script>

    <script>
        function loadGiftData(giftId) {
            if (!giftId) {
                document.getElementById('giftDataForm').innerHTML = '';
                return;
            }
            fetch(`/get-gift/${giftId}`)
                .then(response => response.json())
                .then(data => {
                    const giftDataForm = document.getElementById('giftDataForm');
                    let imagePreviewHtml = `
                        <div class="form-group">
                            <label for="image">Upload Image:</label>
                            <input type="file" class="form-control-file" id="image" name="image" accept="image/*" onchange="previewImage();">
                            <div class="img-preview mt-2">
                                <img src="${data.image ? 'data:image/jpeg;base64,' + data.image : ''}" alt="Image Preview" class="img-fluid" id="imagePreview" draggable="false">
                            </div>
                        </div>`;

                    giftDataForm.innerHTML = `
                        <div class="form-group">
                            <label for="name">Gift Name:</label>
                            <input type="text" id="name" class="form-control" name="name" value="${data.name}" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea class="form-control" id="description" name="description">${data.description}</textarea>
                        </div>
                        ${imagePreviewHtml}
                        <div class="form-group">
                            <label for="quantity">Quantity:</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="${data.quantity}" min="1"
                                aria-describedby="quantityHelp" required>
                            <small id="quantityHelp" class="form-text text-muted">
                                Please enter the quantity (must be 1 or more).
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="needed_points">Needed Points:</label>
                            <input type="number" class="form-control" id="needed_points" name="needed_points" value="${data.needed_points}" min="0">
                        </div>
                    `;

                    // Initialize visibility of image preview based on existing image
                    if (data.image) {
                        animateImagePreview();
                    }
                })
                .catch(error => {
                    console.error('Failed to fetch gift data:', error);
                    document.getElementById('giftDataForm').innerHTML = 'Failed to load data.';
                });
        }

        function previewImage() {
            const file = document.getElementById('image').files[0];
            const previewImg = $('#imagePreview');
            const img_preview_image = $('.img-preview img');

            if (file) {
                // Remove the transition to instantly scale down the image
                img_preview_image.css('transition', 'none');
                previewImg.css('transform', 'scale(0)'); // Instantly scale the image down

                const reader = new FileReader();
                reader.onload = function (e) {
                    previewImg.attr('src', e.target.result);

                    // Re-apply the transition after setting the new image source
                    img_preview_image.css('transition', 'transform 0.5s ease-in-out');

                    // Use a slight delay to ensure the new transition style is applied
                    setTimeout(() => {
                        animateImagePreview();
                    }, 10);
                };
                reader.readAsDataURL(file);
            }
        }

        function animateImagePreview() {
            const previewImg = $('#imagePreview');
            setTimeout(() => {
                previewImg.css('transform', 'scale(1)'); // Animate to full size
            }, 10);
        }
    </script>
</body>

</html>