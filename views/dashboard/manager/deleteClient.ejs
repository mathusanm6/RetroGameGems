<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags for Bootstrap 4 -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <title>Delete Client</title>
</head>

<body>
    <div class="container mt-5">
        <a href="/manager-dashboard" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-arrow-left fa" style="padding-right: 10px;"></i> Back to Dashboard
        </a>
    </div>
    <div class="container mt-5">

        <%- include('../../partials/alerts'); %>

            <h1>Delete Chrononaut</h1>
            <form action="/delete-client" method="post">
                <div class="mb-3">
                    <select id="clientId" name="clientId" class="form-select" aria-label="Select a Client">
                        <% clients.forEach(function(client) { %>
                            <option value="<%= client.id %>">
                                <%= client.first_name %>
                                    <%= client.last_name %> - <%= client.email %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="fas fa-user-times fa user-icon" style="padding-right: 10px;"></i> Delete
                                Chrononaut
                            </button>
                        </div>
                    </div>
                </div>
            </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <script src="/alertHandler.js"></script>
</body>

</html>