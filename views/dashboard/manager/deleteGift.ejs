<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags for Bootstrap 4 -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Delete Gift</title>
</head>

<body>
    <div class="container mt-5">
        <a href="/manager-dashboard" class="btn btn-outline-primary mt-3">Back to Manager Dashboard</a>
    </div>
    <div class="container mt-5">
        <h1>Delete Gift</h1>
        <form action="/delete-gift" method="post">
            <div class="form-group">
                <label for="giftId">Select a Gift to Delete:</label>
                <select name="giftId" class="form-control">
                    <option value="">Select a Gift</option>
                    <% gifts.forEach(function(gift) { %>
                        <option value="<%= gift.id %>">
                            <%= gift.name %> - <%= gift.needed_points %> points
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-2">
                        <button type="submit" class="btn btn-danger btn-block">Delete Gift</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>

</html>