<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Bootstrap 4 Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        h3 {
            font-size: large;
        }

        .fa {
            margin-right: 0.5rem;

            /* 8px right margin */
        }

        .highlight {
            padding: 0 5px;
            background-color: rgba(0, 123, 255, 0.1);
            border-radius: 4px;
            font-weight: bold;
            color: rgb(35, 148, 133);
            display: inline-block;
        }

        .highlight:hover {
            background-color: rgba(0, 123, 255, 0.2);
            animation: jiggle 0.5s;
            animation-iteration-count: infinite;
        }

        @keyframes jiggle {

            0%,
            100% {
                transform: translateX(-2px);
            }

            50% {
                transform: translateX(2px);
            }
        }


        .user-icon {
            color: #007bff;
        }

        /* Bootstrap blue */
        .point-icon {
            color: #ffc107;
        }

        /* Bootstrap red */
        .gift-icon {
            color: #dc3545;
        }

        /* Bootstrap green */
        .credential-icon {
            color: #28a745;
        }

        /* Bootstrap yellow */
    </style>
    <title>Chief's Dashboard</title>
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4"><span class="highlight">Chief</span>'s Dashboard</h1>

        <!-- User Management -->
        <div class="mb-3">
            <h3>Chrononaut / Chief Management</h3>
            <div class="list-group">
                <a href="/create-user" class="list-group-item list-group-item-action">
                    <i class="fas fa-user-plus fa user-icon"></i> Create Chrononaut / Chief
                </a>
                <a href="/modify-client" class="list-group-item list-group-item-action">
                    <i class="fas fa-user-edit fa user-icon"></i> Modify Chrononaut
                </a>
                <a href="/delete-client" class="list-group-item list-group-item-action">
                    <i class="fas fa-user-times fa user-icon"></i> Delete Chrononaut
                </a>
            </div>
        </div>

        <!-- Points Management -->
        <div class="mb-3">
            <h3>Points Management</h3>
            <a href="/add-points" class="list-group-item list-group-item-action">
                <i class="fas fa-coins fa point-icon"></i> Add Points to Chrononaut
            </a>
        </div>

        <!-- Gift Management -->
        <div class="mb-3">
            <h3>Gift Management</h3>
            <a href="/add-gift" class="list-group-item list-group-item-action">
                <i class="fas fa-gift fa gift-icon"></i> Add Retro Gift
            </a>
            <a href="/modify-gift" class="list-group-item list-group-item-action">
                <i class="fas fa-edit fa gift-icon"></i> Modify Retro Gift
            </a>
            <a href="/delete-gift" class="list-group-item list-group-item-action">
                <i class="fas fa-trash fa gift-icon"></i> Delete Retro Gift
            </a>
        </div>

        <!-- Credential Management -->
        <div class="mb-3">
            <h3>Credential Management</h3>
            <a href="/modify-manager" class="list-group-item list-group-item-action">
                <i class="fas fa-user-cog fa credential-icon"></i> Modify Own Credentials
            </a>
        </div>

        <a href="/auth/logout" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-sign-out-alt fa logout-icon"></i> Logout
        </a>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>