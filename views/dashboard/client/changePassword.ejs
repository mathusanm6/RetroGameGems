<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>Change Password</title>

    <style>
        .custom-alert {
            background-color: #f0f9ff;
            color: #31708f;
            border-color: #bce8f1;
            opacity: 0.75;
            font-size: 0.9rem;
            border-radius: 5px;
            padding: 5px 10px;
            margin-bottom: 10px;
        }
    </style>

</head>

<body>
    <div class="container mt-5">
        <a href="/client-dashboard" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-arrow-left fa" style="padding-right: 10px;"></i> Back to Dashboard
        </a>
    </div>

    <div class="container mt-5">

        <%- include('../../partials/alerts') %>
            <div class="container mt-5">
                <h1 class="mb-4">Change Password</h1>
            </div>

            <form action="/change-password" method="post">
                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" id="oldPassword" name="oldPassword"
                        placeholder="Old Password" required>
                    <label for="oldPassword">Old Password</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" id="newPassword" name="newPassword"
                        placeholder="New Password" onchange="validatePasswords()" required>
                    <label for="newPassword">New Password</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                        placeholder="Confirm New Password" onchange="validatePasswords()" required>
                    <label for="confirmPassword">Confirm New Password</label>
                </div>
                <div id="passwordAlert" class="alert custom-alert d-none" role="alert">
                    Passwords do not match.
                </div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-key fa" style="padding-right: 10px;"></i> Change Password
                            </button>
                        </div>
                    </div>
                </div>
            </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <script src="/alertHandler.js"></script>

    <script>
        function validatePasswords() {
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = document.getElementById('confirmPassword').value;
            var alertBox = document.getElementById('passwordAlert');
            if (newPassword !== confirmPassword) {
                alertBox.classList.remove('d-none');
                return false;
            } else {
                alertBox.classList.add('d-none');
                return true;
            }
        }
    </script>
</body>

</html>