<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Bootstrap 4 Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        h3 {
            font-size: large;
        }

        .fa {
            margin-right: 0.5rem;
        }

        .cart-item {
            border: 1px solid #dee2e6;
            border-radius: .25rem;
            margin-bottom: 10px;
            padding: 10px;
        }
    </style>
    <title>Shopping Cart</title>
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Shopping Cart</h1>

            <% if (items.length > 0) { %>
              <% items.forEach(item => { %>
                <div class="cart-item">
                  <h5><%= item.name %></h5>
                  <p>Price: <%= item.price %> Points</p>
                  <p>Quantity: <%= item.quantity %></p>
                  <!-- Form for updating quantity -->
                  <form action="/update-cart-item" method="post">
                    <input type="hidden" name="giftId" value="<%= item.giftId %>">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" value="<%= item.quantity %>" min="1">
                    <button type="submit" class="btn btn-primary">Update Quantity</button>
                  </form>
                  <!-- Form for removing item -->
                  <form action="/remove-from-cart" method="post">
                    <input type="hidden" name="giftId" value="<%= item.giftId %>">
                    <button type="submit" class="btn btn-danger">Remove Item</button>
                  </form>
                </div>
              <% }) %>
            <% } else { %>
              <p>Your shopping cart is empty.</p>
            <% } %>

    <a href="/client-dashboard" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-arrow-left fa"></i> Back to Dashboard
        </a>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>