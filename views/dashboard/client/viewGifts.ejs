<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Bootstrap 4 Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .gift-icon {
            color: #dc3545;
        }

        .card-title,
        .points,
        .quantity {
            color: #007bff;
            font-weight: bold;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .btn-primary {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-primary:hover {
            background-color: #004085;
        }

        .card-img-top {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }
    </style>
    <title>Available Gifts</title>
</head>

<body>
    <div class="container mt-5">
        <a href="/client-dashboard" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-arrow-left" style="padding-right: 10px;"></i> Back to Dashboard
        </a>
    </div>

    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-gift gift-icon"></i> Available Gifts</h1>

        <% if (gifts.length === 0) { %>
            <div class="alert alert-info" role="alert">
                No gifts available at the moment.
            </div>
            <% } %>

        <div class="row">
            <% gifts.forEach(gift=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="data:image/jpeg;base64,<%= gift.image.toString('base64') %>" class="card-img-top"
                            alt="<%= gift.name %>" draggable="false">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <%= gift.name %>
                            </h5>
                            <p class="card-text">
                                <%= gift.description %>
                            </p>
                            <p class="card-text points">Points Needed: <strong>
                                    <%= gift.needed_points %>
                                </strong></p>
                            <p class="card-text quantity">Available Quantity: <strong>
                                    <%= gift.quantity %>
                                </strong></p>
                            <form action="/add-to-cart" method="post" class="mt-auto">
                                <input type="hidden" name="giftId" value="<%= gift.id %>">
                                <div class="form-group mb-2">
                                    <label for="quantity<%= gift.id %>">Quantity:</label>
                                    <input type="number" id="quantity<%= gift.id %>" name="quantity" value="1" min="1"
                                        class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>